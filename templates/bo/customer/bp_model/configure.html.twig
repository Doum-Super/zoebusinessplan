{% extends 'bo/base.html.twig' %}

{% block extra_body_class %} subheader-enabled{% endblock %}

{% block breadcrumb %}
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-1 mr-5">Configuration</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="{{ path('bo_customer_bp_model_list') }}" class="text-muted">Business Plan</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Client</a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <!--end::Subheader-->
{% endblock %}

{% block body %}
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b">
                        <div class="card-header">
                            <h3 class="card-title">
                                {% block card_title %}Configuration Business Plan du client{% endblock %}
                            </h3>
                        </div>
                        <!--begin::Form-->
                        {{ include('bo/customer/bp_model/_form.html.twig') }}
                        <!--end::Form-->
                    </div>
                    <!--end::Card-->
                </div>

            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/public/assets/bo/js/pages/crud/file-upload/image-input.js?v=7.0.5') }}"></script>
    <script src="{{ asset('/assets/admin/js/pages/crud/forms/editors/summernote.js?v=7.0.5') }}"></script>
    <script>
        jQuery(document).ready(function() {
            $('.summernote').summernote();
            $('#customer_bp_cover_file').prop('required', false);
            $('#customer_bp_cover_file').on('change', function() {
                $(this).prop('required', true);
            });

            $('.custom-file-input').on('change', function() {
                var fileName = $(this).val();
                $(this).next('.custom-file-label').addClass("selected").html(fileName);
            });
        });
    </script>
{% endblock %}


